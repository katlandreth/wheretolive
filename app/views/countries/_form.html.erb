<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for @country do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :population %>
        <%= f.number_field :population, step: 1, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :cost_of_living_rank %>
        <%= f.number_field :cost_of_living_rank, step: 1, class: "form-control" %>
        <small class="help-block">From Numbeo's 2017 ranking</small><br>
      </div>

      <div class="form-group">
        <%= f.label :life_satisfaction_rank %>
        <%= f.number_field :life_satisfaction_rank, step: 1, class: "form-control" %>
        <small class="help-block">Out of 36 countries, from <a href="http://www.oecdbetterlifeindex.org/topics/life-satisfaction/">oecd</a></small><br>
      </div>

      <div class="form-group">
        <%= f.label :latitude %>
        <%= f.number_field :latitude, step: 0.000001, class: "form-control" %>
        <small class="help-block">Lat and Long of a major city in the country</small><br>
      </div>

      <div class="form-group">
        <%= f.label :longitude %>
        <%= f.number_field :longitude, step: 0.000001, class: "form-control" %>
      </div>

      <%= f.submit "Submit" %>
    <% end %>
  </div>
</div>
