<div class="filter-form-wrapper col-md-6 col-md-offset-3">
  <%= form_for :overall_rank, url: overall_rank_path, class: "container form-horizontal", remote: true do |f| %>
    <div id="category_switches" class="col-md-12 category_switches filter-section hide-filter">
      <%= render "countries/filter/categories", f: f  %>
    </div>
    <div id="category_deal_breakers" class="col-md-12 deal_breakers filter-section hide-filter">
      <%= render "countries/filter/deal_breakers", f: f  %>
    </div>
    <div id="category_weights" class="col-md-12 category_weights filter-section hide-filter">
      <%= render "countries/filter/weights", f: f  %>
    </div>
  <% end %>
</div>
